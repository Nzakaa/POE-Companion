<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorPrimaryDark"
             tools:context=".ui.inventory.InventoryFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="?attr/colorPrimary"
                android:layout_width="@dimen/item_slot_2"
                android:padding="2dp"
                android:cropToPadding="true"
                android:background="@drawable/border_image_view"
                android:layout_height="@dimen/item_slot_3"
                android:id="@+id/imageView_weapon"
                app:layout_constraintEnd_toStartOf="@+id/imageView_helm"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView_ring"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"/>
        <ImageView
                android:src="?attr/colorPrimary"
                android:background="@drawable/border_image_view"
                android:layout_width="@dimen/item_slot_2"
                android:layout_height="@dimen/item_slot_3"
                android:id="@+id/imageView_offhand"
                android:padding="2dp"
                android:cropToPadding="true"
                app:layout_constraintStart_toEndOf="@+id/imageView_helm"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView_ring2"
                app:layout_constraintHorizontal_bias="0.5"/>
        <ImageView
                android:src="?attr/colorPrimary"
                android:background="@drawable/border_image_view"
                android:layout_width="@dimen/item_slot_2"
                android:layout_height="@dimen/item_slot_2"
                android:padding="2dp"
                android:cropToPadding="true"
                android:id="@+id/imageView_helm"
                app:layout_constraintTop_toBottomOf="@+id/character_title"
                app:layout_constraintBottom_toTopOf="@+id/imageView_bodyarmour"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageView_weapon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/imageView_offhand"
                android:layout_marginBottom="16dp"/>
        <ImageView
                android:src="?attr/colorPrimary"
                android:background="@drawable/border_image_view"
                android:layout_width="@dimen/item_slot_2"
                android:layout_height="@dimen/item_slot_1"
                android:padding="2dp"
                android:cropToPadding="true"
                android:id="@+id/imageView_belt"
                app:layout_constraintTop_toBottomOf="@+id/imageView_bodyarmour"
                app:layout_constraintBottom_toTopOf="@+id/cardView2"
                app:layout_constraintStart_toEndOf="@+id/imageView_gloves"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/imageView_boots"
                android:layout_marginBottom="16dp"/>
        <ImageView
                android:src="?attr/colorPrimary"
                android:background="@drawable/border_image_view"
                android:layout_width="@dimen/item_slot_1"
                android:layout_height="@dimen/item_slot_1"
                android:id="@+id/imageView_ring"
                android:padding="2dp"
                android:cropToPadding="true"
                app:layout_constraintEnd_toStartOf="@+id/imageView_bodyarmour"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView_belt"/>
        <ImageView
                android:src="?attr/colorPrimary"
                android:background="@drawable/border_image_view"
                android:layout_width="@dimen/item_slot_1"
                android:layout_height="@dimen/item_slot_1"
                android:id="@+id/imageView_amulet"
                android:padding="2dp"
                android:cropToPadding="true"
                app:layout_constraintTop_toTopOf="@+id/imageView_helm"
                app:layout_constraintStart_toStartOf="@+id/imageView_offhand"/>
        <ImageView
                android:src="?attr/colorPrimary"
                android:background="@drawable/border_image_view"
                android:layout_width="@dimen/item_slot_1"
                android:layout_height="@dimen/item_slot_1"
                android:padding="2dp"
                android:cropToPadding="true"
                android:id="@+id/imageView_ring2"
                app:layout_constraintStart_toEndOf="@+id/imageView_bodyarmour"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView_belt"/>
        <ImageView
                android:src="?attr/colorPrimary"
                android:background="@drawable/border_image_view"
                android:layout_width="@dimen/item_slot_2"
                android:layout_height="@dimen/item_slot_2"
                android:padding="2dp"
                android:cropToPadding="true"
                android:id="@+id/imageView_gloves"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/imageView_belt"
                android:layout_marginEnd="16dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="@+id/imageView_belt"/>
        <ImageView
                android:src="?attr/colorPrimary"
                android:background="@drawable/border_image_view"
                android:layout_width="@dimen/item_slot_2"
                android:layout_height="@dimen/item_slot_2"
                android:padding="2dp"
                android:cropToPadding="true"
                android:id="@+id/imageView_boots"
                app:layout_constraintStart_toEndOf="@+id/imageView_belt"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/imageView_belt"/>
        <ImageView
                android:src="?attr/colorPrimary"
                android:background="@drawable/border_image_view"
                android:layout_width="@dimen/item_slot_2"
                android:layout_height="@dimen/item_slot_3"
                android:id="@+id/imageView_bodyarmour"
                android:padding="2dp"
                android:cropToPadding="true"
                app:layout_constraintTop_toBottomOf="@+id/imageView_helm"
                app:layout_constraintBottom_toTopOf="@+id/imageView_belt"
                app:layout_constraintStart_toEndOf="@+id/imageView_ring"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/imageView_ring2"
                android:layout_marginBottom="32dp"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/character_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:padding="@dimen/text_padding"
                        android:id="@+id/textView_character_name"
                        android:layout_weight="1"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:padding="@dimen/text_padding"
                        android:id="@+id/textView_level_class"
                        android:layout_weight="1" android:textAlignment="textEnd"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border_image_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView_belt"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginTop="38dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:layout_width="@dimen/item_slot_1"
                        android:layout_height="@dimen/item_slot_2"
                        android:background="@color/colorPrimary"
                        android:id="@+id/imageView_flask1"/>
                <View
                        android:id="@+id/divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:layout_width="@dimen/item_slot_1"
                        android:background="@color/colorPrimary"
                        android:layout_height="@dimen/item_slot_2"
                        android:id="@+id/imageView_flask2"/>
                <View
                        android:id="@+id/divider2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:layout_width="@dimen/item_slot_1"
                        android:background="@color/colorPrimary"
                        android:layout_height="@dimen/item_slot_2"
                        android:id="@+id/imageView_flask3"/>
                <View
                        android:id="@+id/divider3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:layout_width="@dimen/item_slot_1"
                        android:background="@color/colorPrimary"
                        android:layout_height="@dimen/item_slot_2"
                        android:id="@+id/imageView_flask4"/>
                <View
                        android:id="@+id/divider4"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:layout_width="@dimen/item_slot_1"
                        android:background="@color/colorPrimary"
                        android:layout_height="@dimen/item_slot_2"
                        android:id="@+id/imageView_flask5"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>