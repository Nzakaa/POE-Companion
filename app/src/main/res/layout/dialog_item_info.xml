<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:onClick="dismissDialog"
                                   android:id="@+id/cardView_item">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black_outline">

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/frame_item_name"
                android:padding="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:text="TextView \ntextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_item_name"
                    android:textAppearance="@style/itemInfoTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="@dimen/item_info_padding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAlignment="center"/>
        </FrameLayout>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:textAppearance="@style/itemInfoBaseText"
                android:padding="@dimen/item_info_padding"
                android:layout_height="wrap_content" android:id="@+id/textView_base_properties"
                app:layout_constraintTop_toBottomOf="@+id/frame_item_name" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.15"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:textAppearance="@style/itemInfoBaseText"
                android:padding="@dimen/item_info_padding"
                android:layout_height="wrap_content" android:id="@+id/textView_implicit"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textAlignment="center"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/textView_base_properties"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:textAppearance="@style/itemInfoBaseText"
                android:padding="@dimen/item_info_padding"
                android:layout_height="wrap_content" android:id="@+id/textView_lab_enchant"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/textView_implicit"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:textAppearance="@style/itemInfoBaseText"
                android:padding="@dimen/item_info_padding"
                android:layout_height="wrap_content" android:id="@+id/textView_properties"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/textView_lab_enchant"/>
        <TextView
                android:text="@string/corrupted"
                android:layout_width="0dp"
                android:textAppearance="@style/itemInfoBaseText"
                android:textColor="@color/corrupted"
                android:padding="@dimen/item_info_padding"
                android:layout_height="wrap_content" android:id="@+id/textView_corrupted"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/textView_properties"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>