<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:onClick="dismissDialog"
                                   android:id="@+id/cardView_item">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black_outline">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_item_name"
                android:padding="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:text="TextView \ntextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_item_name"
                    android:textAppearance="@style/itemInfoTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="@dimen/item_info_padding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAlignment="center"/>
        </FrameLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearlayout_item_info"
                app:layout_constraintTop_toBottomOf="@+id/frame_item_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:showDividers="middle"
                android:paddingBottom="4dp"
                android:divider="@drawable/gradient_divider"
        >
            <TextView
                    android:text="textView_base_properties"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/itemInfoBaseText"
                    android:padding="@dimen/item_info_padding"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_base_properties"
                    android:textAlignment="center"
            />
            <!--<View android:layout_height="2dp"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:background="@drawable/gradient_divider"-->
            <!--android:layout_marginBottom="5dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:id="@+id/separator2"-->
            <!--/>-->
            <TextView
                    android:text="textView_implicit"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/itemInfoBaseText"
                    android:padding="@dimen/item_info_padding"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_implicit"
                    android:textAlignment="center"
            />
            <TextView
                    android:text="textView_lab_enchant"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/itemInfoBaseText"
                    android:padding="@dimen/item_info_padding"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_lab_enchant"
                    android:textAlignment="center"
            />
            <TextView
                    android:text="textView_properties"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/itemInfoBaseText"
                    android:padding="@dimen/item_info_padding"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_properties"
                    android:textAlignment="center"
            />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>