<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:gravity="center"
            android:bottom="29dp"
    >
        <rotate
                android:fromDegrees="90"
                android:toDegrees="90"
                android:pivotX="50%"
                android:pivotY="50%"
        >
            <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="line">

                <stroke
                        android:width="1dp"
                        android:color="@color/gemlink">
                </stroke>
                <size
                        android:width="@dimen/skill_gem_row_icon"
                        android:height="@dimen/skill_gem_row_icon"
                >
                </size>
            </shape>
        </rotate>
    </item>

    <item
            android:left="@dimen/skill_gem_row_icon">
        <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="line">

            <stroke
                    android:width="1dp"
                    android:color="@color/gemlink">
            </stroke>
            <size
                    android:width="@dimen/skill_gem_row_icon"
                    android:height="@dimen/skill_gem_row_icon"
            >
            </size>
        </shape>
    </item>
</layer-list>